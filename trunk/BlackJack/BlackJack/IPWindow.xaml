<Window x:Class="BlackJackClient.IPWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Server Address" Height="141" Width="312" WindowStyle="ToolWindow" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="IP Address of Server:" Height="28" HorizontalAlignment="Left" Margin="12,20,0,0" Name="label1" VerticalAlignment="Top" FontWeight="Bold" />
        <TextBox Height="21" HorizontalAlignment="Left" Margin="145,27,0,0" Name="txtIP" VerticalAlignment="Top" Width="120" />
        <Button Content="OK" Height="23" HorizontalAlignment="Left" Margin="64,67,0,0" Name="btnOK" VerticalAlignment="Top" Width="75" FontWeight="Bold" IsDefault="True" Click="btnOK_Click" />
        <Button Content="Cancel" FontWeight="Bold" Height="23" HorizontalAlignment="Left" Margin="145,67,0,0" Name="btnCancel" VerticalAlignment="Top" Width="75" IsCancel="True" />
    </Grid>
</Window>
