<Window x:Class="BlackJack.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:cust="clr-namespace:BlackJack"
        Title="MainWindow" Height="429" Width="706">
    <Grid Height="370" Width="661">
        <Canvas Height="370" HorizontalAlignment="Left" Name="canvas1" VerticalAlignment="Top" Width="498">
            <Canvas.Background>
                <ImageBrush ImageSource="img/felt.jpg"  Stretch="Fill" />
            </Canvas.Background>
            <cust:ucDealerHand x:Name="DealerHand" Canvas.Left="6" Canvas.Right="1" Canvas.Top="6" Height="172" Width="189" />
            <Label Canvas.Left="164" Canvas.Top="194" Content="" Height="28" Name="lblCount" FontWeight="Bold" Foreground="#FFFCF2F2" />
            <cust:ucCardContainer x:Name="container1" Canvas.Left="193" Canvas.Top="214"/>
            <cust:ucCardContainer x:Name="container2" Canvas.Left="206" Canvas.Top="214" />
            <cust:ucCardContainer x:Name="container3" Canvas.Left="220" Canvas.Top="198" />
            <cust:ucCardContainer x:Name="container4" Canvas.Left="234" Canvas.Top="189" />
            <cust:ucCardContainer x:Name="container5" Canvas.Left="249" Canvas.Top="181" />
            <Button Content="Stay" Height="23" Name="btnStay" Width="75" Click="btnStay_Click" Canvas.Left="164" Canvas.Top="331" />
            <Button Content="Hit" Height="23" Name="btnHit" Width="75" Click="btnHit_Click" Canvas.Left="254" Canvas.Top="331" />
            
        </Canvas>
        <Button Content="Ready" Height="23" HorizontalAlignment="Left" Margin="532,300,0,0" Name="btnReady" VerticalAlignment="Top" Width="75" Click="btnReady_Click" />
        <ListBox Height="161" HorizontalAlignment="Left" Margin="504,0,0,0" Name="lstPlayers" VerticalAlignment="Top" Width="133" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="504,167,0,0" Name="txtJoin" VerticalAlignment="Top" Width="133" />
        <Button Content="Join" Height="23" HorizontalAlignment="Left" Margin="532,196,0,0" Name="btnJoin" VerticalAlignment="Top" Width="75" Click="btnJoin_Click" />
    </Grid>
</Window>
